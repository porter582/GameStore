@page
@model GameStore.Pages.Admin.Genre.UpsertModel

    <form method="post" asp-action="Upsert">
        <div class="container">
            <div class="row px-2 mx-2 backgroundWhite border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.GenreObj.Id != 0)
                {
                    <input type="hidden" asp-for="GenreObj.Id" />
                }
                <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                    <h2 class="text-primary">@(Model.GenreObj.Id != 0 ? "Update" : "Create") Genre</h2>
                </div>
                <div class="col-8 pt-3">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="GenreObj.Name"></label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" asp-for="GenreObj.Name" />
                            <span class="text-danger" asp-validation-for="GenreObj.Name"></span>
                        </div>
                    </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-9 offset-3">
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary form-control">@(Model.GenreObj.Id != 0 ? "Update" : "Create")</button>
                                </div>
                                <div class="col-6">
                                    <a asp-page="./Index" type="submit" class="btn btn-success form-control">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </form>