@page
@model GameStore.Pages.Admin.Rating.UpsertModel

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.RatingObj.Id != 0)
            {
                <input type="hidden" asp-for="RatingObj.Id" />
            }
            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary">@(Model.RatingObj.Id != 0 ? "Update" : "Create") Rating</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="RatingObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="RatingObj.Name" />
                        <span class="text-danger" asp-validation-for="RatingObj.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="RatingObj.Description"></label>
                    </div>
                    <div class="col-9">
                        <textarea class="form-control" asp-for="RatingObj.Description" id="txtDescription" style="height:200px"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-9 offset-3">
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary form-control">@(Model.RatingObj.Id != 0 ? "Update" : "Create")</button>
                        </div>
                        <div class="col-6">
                            <a asp-page="./Index" type="submit" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        tinymce.init(
            {
                selector: 'textarea',
                plugins: 'lists',
                menubar: 'file edit format'
            }
        )
    </script>
}